<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/coordinatorLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_detail_time"
            style="@style/TextAppearance.MdcTypographyStyles.Headline3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            tools:text="00:01:32" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_detail_start"
            style="@style/Button.Contained"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_46dp"
            android:layout_below="@id/tv_detail_time"
            android:layout_marginHorizontal="@dimen/_36dp"
            android:layout_marginTop="@dimen/_24dp"
            android:text="Start"
            android:textSize="@dimen/_14sp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_detail_stop"
            style="@style/Button.Contained"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_46dp"
            android:layout_marginTop="@dimen/_8dp"
            android:layout_below="@id/btn_detail_start"
            android:layout_marginHorizontal="@dimen/_36dp"
            android:text="Stop"
            android:textSize="@dimen/_14sp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_detail_reset"
            style="@style/Button.Contained"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_46dp"
            android:layout_marginTop="@dimen/_8dp"
            android:layout_below="@id/btn_detail_stop"
            android:layout_marginHorizontal="@dimen/_36dp"
            android:text="Reset"
            android:textSize="@dimen/_14sp" />

    </RelativeLayout>


</androidx.core.widget.NestedScrollView>